generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// RIASEC travel quiz schema

enum RiasecType {
  REALISTIC
  INVESTIGATIVE
  ARTISTIC
  SOCIAL
  ENTERPRISING
  CONVENTIONAL
}

model Question {
  id              String   @id @default(cuid())
  text            String
  answers         Answer[]
  order           Int
  backgroundImage String   @default("")
}

model Answer {
  id           String     @id @default(cuid())
  text         String
  questionId   String
  question     Question   @relation(fields: [questionId], references: [id])
  riasecType   RiasecType
  imageUrl     String?
}

model TravelerType {
  id             String     @id @default(cuid())
  riasecType     RiasecType @unique
  title          String
  description    String
  imageUrl       String
  shareImageUrl  String
  destinations   String
  tips           String
  trivia         String
}
